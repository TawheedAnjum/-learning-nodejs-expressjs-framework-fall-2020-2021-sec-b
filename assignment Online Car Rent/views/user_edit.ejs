<body>

    <h2>User Imfo</h2>

    <form action="user/edit/<%= user[0].userID %>" method="post">
        <label for="username">Name:</label><br>
        <input type="text" name="username" value="<%= user[0].username %>" ><br><br>
        <label for="email">Email:</label><br>
        <input type="email" name="email" value="<%= user[0].email %>"><br><br>
        <label for="password">password:</label><br>
        <input type="password" name="password" value="<%= user[0].password %>" ><br><br>
        
        <p>select user typer</p>
        <input type="radio" name="userType" value="admin">
        <label for="admin">admin</label>
        <input type="radio" name="userType" value="member">
        <label for="member">member</label><br><br><br>
        

        <input type="submit" name="submit" value="Submit">
    </form> 

</body>
